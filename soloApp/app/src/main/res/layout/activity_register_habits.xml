<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro de Hábitos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trabalho"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <Switch
            android:id="@+id/switchWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trabalho"/>

        <EditText
            android:id="@+id/editTextWorkBegin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de início do trabalho"
            android:inputType="time"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editTextWorkEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de término do trabalho"
            android:inputType="time"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estudo"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <Switch
            android:id="@+id/switchStudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estudo"/>

        <EditText
            android:id="@+id/editTextStudyBegin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de início do estudo"
            android:inputType="time"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editTextStudyEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de término do estudo"
            android:inputType="time"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercícios"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <Switch
            android:id="@+id/switchWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercícios"/>

        <EditText
            android:id="@+id/editTextWorkoutBegin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de início do exercício"
            android:inputType="time"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editTextWorkoutEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de término do exercício"
            android:inputType="time"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regulação de Sono"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editTextSleepBegin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de início do sono"
            android:inputType="time"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editTextSleepEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de término do sono"
            android:inputType="time"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fumar"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radioGroupSmoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioButtonSmokeYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sim"
                android:layout_marginEnd="16dp"/>

            <RadioButton
                android:id="@+id/radioButtonSmokeNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnRegisterHabits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Hábitos"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
