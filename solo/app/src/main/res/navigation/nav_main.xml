<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.solo.LoginFragment"
        android:label="Login Fragment"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_recoverPwdFragment"
            app:destination="@id/recoverPwdFragment" />
    </fragment>

    <fragment
        android:id="@+id/recoverPwdFragment"
        android:name="com.example.solo.RecoverPwdFragment"
        android:label="Recover Password Fragment"
        tools:layout="@layout/fragment_recover_pwd" />
</navigation>
