<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.solo.LoginFragment"
        android:label="Login Fragment"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_recoverPwdFragment"
            app:destination="@id/recoverPwdFragment" />
        <action
            android:id="@+id/action_loginFragment_to_cadastroFragment"
            app:destination="@id/cadastroFragment" />
    </fragment>

    <fragment
        android:id="@+id/recoverPwdFragment"
        android:name="com.example.solo.RecoverPwdFragment"
        android:label="Recover Password Fragment"
        tools:layout="@layout/fragment_recover_pwd" />
    <fragment
        android:id="@+id/cadastroFragment"
        android:name="com.example.solo.CadastroFragment"
        android:label="fragment_cadastro"
        tools:layout="@layout/fragment_cadastro" >
        <action
            android:id="@+id/action_cadastroFragment_to_habitosFragment"
            app:destination="@id/habitosFragment" />
    </fragment>
    <fragment
        android:id="@+id/habitosFragment"
        android:name="com.example.solo.HabitosFragment"
        android:label="fragment_habitos"
        tools:layout="@layout/fragment_habitos" />
</navigation>
