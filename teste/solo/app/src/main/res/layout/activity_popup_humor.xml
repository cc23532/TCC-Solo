<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:text="Como você está se sentindo hoje?"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sadHumor"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:srcCompat="@drawable/sad_emoji" />

    <ImageView
        android:id="@+id/unhappyHumor"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toEndOf="@+id/sadHumor"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:srcCompat="@drawable/unhappy_emoji" />

    <ImageView
        android:id="@+id/normalHumor"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toEndOf="@+id/unhappyHumor"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:srcCompat="@drawable/normal_emoji" />

    <ImageView
        android:id="@+id/happyHumor"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toEndOf="@+id/normalHumor"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:srcCompat="@drawable/happy_emoji" />

    <ImageView
        android:id="@+id/veryhappyHumor"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toEndOf="@+id/happyHumor"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:srcCompat="@drawable/veryhappy_emoji" />

</androidx.constraintlayout.widget.ConstraintLayout>