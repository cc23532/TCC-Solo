<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSection.HomeActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="628dp"
        android:layout_height="1004dp"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.658"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fundo_home" />

    <ScrollView
        android:id="@+id/scrollViewTarefas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendarView">
        <!-- Add child views here -->
    </ScrollView>

    <ImageView
        android:id="@+id/btnProfileIcon"
        android:layout_width="27dp"
        android:layout_height="23dp"
        android:layout_marginStart="368dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Ícone de Perfil"
        android:src="@drawable/solo_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/rounded_square"
        android:layout_width="411dp"
        android:layout_height="95dp"
        android:layout_marginBottom="368dp"
        android:background="@drawable/rounded_square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/fundo_tarefas"
        android:layout_width="341dp"
        android:layout_height="62dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/fundo_tarefas_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/fundo_tarefas2"
        android:layout_width="341dp"
        android:layout_height="62dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/fundo_tarefas_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="180dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Treino"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Sem Fumar"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/shadow_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/top_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/homeIcon"
        android:layout_width="47dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Home Icon"
        android:src="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/calendarIcon"
        android:layout_width="47dp"
        android:layout_height="39dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Calendar Icon"
        android:src="@drawable/calendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homeIcon" />

    <ImageView
        android:id="@+id/personIcon"
        android:layout_width="47dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Person Icon"
        android:src="@drawable/person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calendarIcon" />

    <ImageView
        android:id="@+id/financeIcon"
        android:layout_width="47dp"
        android:layout_height="39dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Fianance Icon"
        android:src="@drawable/finance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dietIcon" />

    <ImageView
        android:id="@+id/dietIcon"
        android:layout_width="47dp"
        android:layout_height="39dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
